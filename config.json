{
  "audio": {
    "sample_rate": 16000,
    "channels": 1,
    "input_device": null,
    "silence_padding_ms": 300
  },
  "whisper": {
    "binary_path": "external\\whisper.cpp\\build\\bin\\Release\\whisper-cli.exe",
    "model_path": "models\\whisper\\ggml-large-v3.bin",
    "faster_model": "large-v3",
    "engine": "faster",
    "device": "cuda",
    "compute_type": "float16",
    "beam_size": 10,
    "language": "en",
    "threads": 8,
    "temperature": 0.0,
    "translate": false,
    "extra_args": [
      "--print-progress"
    ],
    "diarization": {
      "enabled": true,
      "provider": "whisperx",
      "auth_token_env": "HF_TOKEN",
      "min_speakers": 2,
      "max_speakers": 2
    }
  },
  "summarizer": {
    "provider": "ollama",
    "base_url": "http://127.0.0.1:11434",
    "model": "llama3",
    "fallback_model": "",
    "temperature": 0.0,
    "max_tokens": 8000,
    "prompt_style": "narrative",
    "context_window": 8192,
    "timeout_s": 600
  },
  "storage": {
    "root": "local_storage",
    "retention_days": 90,
    "session_prefix": "session",
    "auto_cleanup": true
  },
  "ui": {
    "theme": "DarkBlue3",
    "default_summary_format": "Narrative",
    "transcript_font": "Consolas",
    "summary_font": "Segoe UI",
    "max_visible_chars": 8000
  }
}